<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Level 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLevel2"
        android:layout_below="@+id/buttonLevel1"
        android:layout_alignLeft="@+id/buttonLevel1"
        android:layout_alignStart="@+id/buttonLevel1" />

    <Button
        android:text="Level 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLevel3"
        android:layout_below="@+id/buttonLevel2"
        android:layout_alignLeft="@+id/buttonLevel2"
        android:layout_alignStart="@+id/buttonLevel2" />

    <Button
        android:text="Level 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLevel4"
        android:layout_below="@+id/buttonLevel3"
        android:layout_alignLeft="@+id/buttonLevel3"
        android:layout_alignStart="@+id/buttonLevel3" />

    <Button
        android:text="Level 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLevel1"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>